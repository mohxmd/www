---
import { getSortedPosts } from "#/content/utils";

import Layout from "#/layouts/layout.astro";
import Text from "#/components/ui/text.astro";

import PostCard from "../blog/_components/post-card.astro";

export async function getStaticPaths() {
  const allPosts = await getSortedPosts();

  // Collect unique tag IDs
  const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags.map((t) => t.id)).flat())];

  return uniqueTags.map((tag) => {
    const filteredPosts = allPosts.filter((post) => post.data.tags.some((t) => t.id === tag));
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<Layout title={`Articles tagged #${tag}`}>
  <section class="space-y-6 py-6">
    <Text size="fluid-3xl" class="font-8bit text-center font-bold capitalize">
      Articles on 🏷️ '{tag}'
    </Text>

    <div class="grid gap-6 md:grid-cols-3">
      {posts.map((post) => <PostCard slug={post.id} post={post.data} />)}
    </div>
  </section>
</Layout>
