---
import { cn } from "#/lib/utils";

import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"figcaption">;

const { class: className, ...props } = Astro.props;
---

<figcaption
  {...props}
  class={cn("bg-muted text-muted-foreground text-fluid-sm border-b px-3 py-1.5", className)}
>
  <slot />
</figcaption>
