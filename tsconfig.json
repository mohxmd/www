{
  "extends": "astro/tsconfigs/strictest",
  "include": [".astro/types.d.ts", "**/*"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "verbatimModuleSyntax": true,
    "plugins": [{ "name": "@astrojs/ts-plugin" }],
    "baseUrl": ".",
    "paths": {
      "#/*": ["src/*"]
    }
  },
  "exclude": ["dist", ".vercel", ".astro", ".vscode", "node_modules"]
}
