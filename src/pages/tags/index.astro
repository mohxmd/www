---
import { getAllTags } from "#/content/utils";
import { cn } from "#/lib/utils";

import Layout from "#/layouts/layout.astro";
import Link from "#/components/ui/link.astro";
import Text from "#/components/ui/text.astro";
import * as List from "#/components/ui/list";

const tags = await getAllTags();
---

<Layout title="Mohammed's blog | Tags">
  <section class="space-y-6 py-6">
    <Text size="3xl" class="font-8bit text-center font-bold">🗃️ Explore All Available Tags</Text>

    <List.Root class="flex flex-row flex-wrap gap-3">
      {
        tags.map((tag) => (
          <List.Item>
            <Link
              href={`/tags/${tag.id}`}
              class={cn(
                "text-muted-foreground hover:text-foreground rounded border px-4 py-1 text-sm capitalize transition-colors",
                `lang-${tag.text.toLocaleLowerCase()}`
              )}
            >
              #{tag.text}
            </Link>
          </List.Item>
        ))
      }
    </List.Root>
  </section>
</Layout>
