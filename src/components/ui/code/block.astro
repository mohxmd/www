---
import { cn } from "#/lib/utils";
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"code">;

const { class: className, ...props } = Astro.props;
---

<code
  {...props}
  class={cn(
    "text-base tracking-tight [counter-reset:code]",
    "not-data-language:inline-flex not-data-language:px-1",
    "not-data-language:decoration-clone not-data-language:leading-tight",
    className
  )}
>
  <slot />
</code>
