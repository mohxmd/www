---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";

const variants = cva("shrink-0 rounded bg-border", {
  variants: {
    orientation: {
      horizontal: "h-px w-full",
      vertical: "h-full w-px",
    },
  },
  defaultVariants: {
    orientation: "horizontal",
  },
});

export type SeparatorVariants = VariantProps<typeof variants>;

type Props = HTMLAttributes<"div"> & SeparatorVariants;

const { class: className, orientation, ...props } = Astro.props;
---

<div {...props} role="separator" class={variants({ orientation, className })}></div>
