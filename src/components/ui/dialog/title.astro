---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";

type Props = Omit<HTMLAttributes<"h2">, "id"> & TitleVariants;

export type TitleVariants = VariantProps<typeof variants>;

const variants = cva("text-2xl leading-none font-semibold tracking-tight");

const { class: className, ...props } = Astro.props;
---

<h2 {...props} class={variants({ className })} data-slot="dialog-title">
  <slot />
</h2>
