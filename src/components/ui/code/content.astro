---
import type { HTMLAttributes } from "astro/types";
import Clipboard from "../clipboard.astro";
import { cn } from "#/lib/utils";

type Props = HTMLAttributes<"pre">;

const { class: className, dir = "ltr", tabindex, ...props } = Astro.props;
---

<Clipboard
  size="sm"
  class="absolute top-0 right-0"
  value="$el.nextElementSibling.textContent.trim()"
/>
<pre
  {...props}
  {dir}
  {tabindex}
  class={cn("thin-scrollbar overflow-auto p-3.5", className)}><slot /></pre>
