---
import type { ComponentProps } from "astro/types";
import Text from "../text.astro";
import { cn } from "#/lib/utils";

type Props = Omit<ComponentProps<typeof Text<"li">>, "as"> & {
  current: number;
  max: number;
};

const { class: className, current, max, size, ...props } = Astro.props;
---

<Text
  {...props}
  as="li"
  size={size ?? "sm"}
  class={cn("flex w-14 items-center justify-center select-none", className)}
>
  {current} of {max}
</Text>
