---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";

type Props = HTMLAttributes<"tr"> & RowVariants;

export type RowVariants = VariantProps<typeof variants>;

const variants = cva("hover:bg-muted/50 data-[state=selected]:bg-muted border-b transition-colors");

const { class: className, ...props } = Astro.props;
---

<tr {...props} class={variants({ className })} data-slot="table-row" role="row">
  <slot />
</tr>
