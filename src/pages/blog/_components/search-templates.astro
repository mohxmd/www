---
import PostCard from "./post-card.astro";
import PlaceHolderImage from "#/assets/oyasumi.png";
---

<template data-template-card>
  <PostCard
    slug="template"
    post={{
      title: "",
      description: "",
      pubDate: new Date(),
      readingTime: "0",
      image: PlaceHolderImage,
      author: "",
      tags: [],
      draft: false,
    }}
  />
</template>

<div class="hidden py-8 text-center" data-no-posts-found>
  <h2 class="text-fluid-2xl font-bold">No Posts Found</h2>
  <p class="text-muted-foreground">Try adjusting your search or filters.</p>
</div>

<div class="mt-8 hidden grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3" data-searched-posts></div>
