---
import type { HTMLAttributes } from "astro/types";
import { cva, type VariantProps } from "class-variance-authority";

type Props = HTMLAttributes<"div"> & HeaderVariants;

export type HeaderVariants = VariantProps<typeof variants>;

const variants = cva("flex flex-col space-y-2 text-center sm:text-left");

const { class: className, ...props } = Astro.props;
---

<div {...props} class={variants({ className })} data-slot="dialog-header">
  <slot />
</div>
